@{
    Layout = null;
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Train Ticket Booking System</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
          rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar-wrapper">
        <nav class="navbar navbar-inverse navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Search", "Index", "Train")</li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Purchased Tickets", "List", "Ticket")</li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Create user", "CreateUser", "Administrator")</li>
                            <li>@Html.ActionLink("Add role", "AddRole", "Administrator")</li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
    </div>

    <div id="carousel-wrapper">
        <div id="carousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class=""></li>
                <li data-target="#carousel" data-slide-to="1" class="active"></li>
                <li data-target="#carousel" data-slide-to="2" class=""></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="item">
                    <img class="first-slide " src="~/Content/Images/carrousel1.jpg" alt="First slide">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>Hot promotions for the holidays.</h1>
                            <p>Visit the most interesting European capital cities during this holyday season and save money at the same time.</p>
                            <p><a class="btn btn-lg btn-primary" href="#" role="button">See more</a></p>
                        </div>
                    </div>
                </div>
                <div class="item active">
                    <img class="second-slide " src="~/Content/Images/carrousel2.jpg" alt="Second slide">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>Train ticket booking system</h1>
                            <p>This web application was built using ASP.NET MVC 5, Entity Framework and Bootstrap.</p>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img class="third-slide " src="~/Content/Images/carrousel3.jpg" alt="Third slide">
                    <div class="container">
                        <div class="carousel-caption">
                            <h1>Track passengers count.</h1>
                            <p>You can track the number of passengers in a given train, so that you know if there are enough seats for you. If somebody cancels</p>
                        </div>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#carousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="container marketing">
        <div class="row summaries">
            <div class="col-lg-4">
                <i class="img-circle material-icons icon-price">&#xE227;</i>
                <h2>Low prices</h2>
                <p>We guarantee that our prices are the lowest you can find.</p>
            </div>
            <div class="col-lg-4">
                <i class="material-icons icon-destination">&#xE55F;</i>
                <h2>Top destinations</h2>
                <p>Visit London, Berlin, Paris, Brussels and Amsterdam.</p>
            </div>
            <div class="col-lg-4">
                <i class="material-icons icon-train">&#xE534;</i>
                <h2>
                    Quality trains
                </h2>
                <p>Travel in the most modern, convinient and secure trains.</p>
            </div>
        </div>
        <!-- START THE FEATURETTES -->

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading">Book tickets online. <span class="text-muted">It's easy and safe.</span></h2>
                <p class="lead">Purchase tickets for your next travel from the convinience of your home. Spend less time waiting in queues. Buying a ticket usually takes less than 2 minutes.</p>
            </div>
            <div class="col-md-5">
                <img class="featurette-image img-circle img-responsive center-block" src="~/Content/Images/buy-online.jpg" alt="Generic placeholder image">
            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7 col-md-push-5">
                <h2 class="featurette-heading">Even better, <span class="text-muted">we're mobile friendly!</span></h2>
                <p class="lead">Imagine you're drinking coffee with your best friend and you spontaneously decide to visit Paris together. We've got you covered. Book your tickets on the go, using our mobile friendly website.</p>
            </div>
            <div class="col-md-5 col-md-pull-7">
                <img class="featurette-image img-circle img-responsive center-block" src="~/Content/Images/mobile-friendly.jpg" alt="Generic placeholder image">
            </div>
        </div>

        <hr class="featurette-divider">

        <div class="row featurette">
            <div class="col-md-7">
                <h2 class="featurette-heading">And lastly, you can cancel your ticket. <span class="text-muted">We will return up to 100% of its price.</span></h2>
                <p class="lead">You booked a trip to Amsterdam for your vacation, but your boss suddenly calls and asks you to cover for a colleague who fell sick. Relax, the money you spent won't be wasted. If you cancel your ticket up to three days before departure, we will return its full price. No questions asked.</p>
            </div>
            <div class="col-md-5">
                <img class="featurette-image img-circle img-responsive center-block" src="~/Content/Images/cancel-ticket.jpg" alt="Generic placeholder image">
            </div>
        </div>

        <!-- /END THE FEATURETTES -->
        <!-- FOOTER -->
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datetime")

</body>
</html>

