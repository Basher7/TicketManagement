@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using TrainTicketBookingSystem.ViewModels.Train
@model IList<AvailableTrainViewModel>

@{
    ViewBag.Title = "Search results";
}

@if (Model.Count == 0)
{
    <h2>No trains found. Try searching with different criteria.</h2>
}
else
{
    <h2>Available trains found: </h2>
    foreach (var train in Model)
    {
        <div class="train-list-item">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        @Html.DisplayFor(x => train.Route.Departure.Name)
                        -
                        @Html.DisplayFor(x => train.Route.Arrival.Name)
                    </h3>
                </div>
                <div class="panel-body">
                    <div>
                        @Html.Label("Date:")
                        <b>
                            @Html.DisplayFor(x => train.DepartureTime)
                        </b>
                    </div>
                    <label>Seats taken:</label>
                    <div>
                        @Html.LabelFor(x => train.BusinessClassPassengersCount):
                        <b>
                            @Html.DisplayFor(x => train.BusinessClassPassengersCount) / @AvailableTrainViewModel.BusinessClassCapacity
                        </b>
                    </div>
                    <div>
                        @Html.LabelFor(x => train.EconomicClassPassengersCount):
                        <b>
                            @Html.DisplayFor(x => train.EconomicClassPassengersCount) / @AvailableTrainViewModel.EconomicClassCapacity
                        </b>
                    </div>
                    @Html.ActionLink("View Details", "Purchase", "Ticket", new { id = train.Id }, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
    }
}
