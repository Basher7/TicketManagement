@model ExtendingIdentity.Models.AddRoleViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Add a new role";
}



<div class="row">
    <div class="col-md-6">
        <h4 class="list-group-item active">Current roles</h4>
        <ul class="list-group">
            @foreach (var role in Model.CurrentRoles)
            {
                <li class="list-group-item">@role</li>
            }
        </ul>
    </div>

    <div class="col-md-6">
        <h3>Add a new role</h3>
        @using (Html.BeginForm("AddRole", "Administrator", FormMethod.Post, new { @class = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
            <input type="submit" value="Add role" class="btn btn-primary btn-lg" />
        }
    </div>
</div>


