@model TrainTicketBookingSystem.ViewModels.Manage.AccountSettingsViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
  <h4>Change your account settings</h4>
  <hr />

  @using (Html.BeginForm("UpdateAccountSettings", "Manage", FormMethod.Post))
  {
      @Html.ValidationSummary(false, "", new { @class = "text-danger" })
      <div class="edit-first-name form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
      </div>
      <div class="edit-last-name form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-success">Save changes</button>
        @Html.ActionLink("Change your password", "ChangePassword", null, new { @class = "btn btn-default" })
      </div>
  }
</div>
